<h1>All Robots</h1>

<% @robots.each do |robot| %>
  <img src="http://robohash.org/ <%= robot.name %>" />
  <h3>(<%= robot.id %>) <a href="/robots/<%= robot.id %>"><%= robot.name %></a></h3>
  <a href="/robots/<%= robot.id %>/edit">Edit</a>
  <a href="/">Home</a>
  <form action="/robots/<%= robot.id %>" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="delete"/>
  </form>
<% end %>
